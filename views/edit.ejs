<%- include('partials/header.ejs'); %>
<h1>Edit and Update</h1>
<form action="/update" method="post">
<div class="form-group">
<label for="Title">Title</label>
<input type="text" name="postTitle" id="postTitle" class="form-control" value="<%- heading %>">
<label for="Tag">Tag</label>
<input type="text" name="postTag" id="postTag" class="form-control" value="<%- tag %>">
<label for="Description">Summary</label>
<input type="text" name="postDescription" id="postDescription" class="form-control" value="<%- description %>">
<label for="Body">Post</label>
<textarea name="postBody" id="postBody" rows="15" cols="80" class="form-control"><%= body %> </textarea>
<input type="hidden" name="postPath" value="<%= url %>">
<button class="btn btn-outline-light" type="submit">Update</button>
</div>
</form>
<form action="/delete" method="post"><input type="hidden" name="postPath" value="<%= url %>"><button class="btn btn-outline-light" type="submit">Delete this post</button></form>
<%- include('partials/footer.ejs'); %>